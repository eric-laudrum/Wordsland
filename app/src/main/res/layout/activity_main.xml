<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/green"
    >



    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <EditText
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Wordsland"
            android:textColor="@color/white"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/round_counter_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_gravity="bottom"
            android:layout_marginStart="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Round: 1" />

    </LinearLayout>


    <!-- Main Grid -->
    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/grid"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:background="@color/darker_green"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header"
        app:layout_constraintBottom_toTopOf="@+id/letter_tray_recycler"
        />

    <!-- Player Tiles -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/letter_tray_recycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:overScrollMode="never"

        android:background="@color/green"



        android:clipToPadding="false"
        android:layout_marginBottom="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/button_bar"
        />

    <LinearLayout
        android:id="@+id/button_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/green"

        >

        <Button
            android:id="@+id/enter_word_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter"
            />

        <Button
            android:id="@+id/return_tiles_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recall"
            />


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>